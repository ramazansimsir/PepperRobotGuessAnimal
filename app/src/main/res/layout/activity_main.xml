<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A5D4E8"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        tools:layout_editor_absoluteX="172dp"
        android:gravity="center_vertical"
        tools:layout_editor_absoluteY="-48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"

            android:orientation="horizontal"
            android:padding="20dp">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/fare"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/fare3"
                app:siBorderWidth="6dp"
                app:siBorderColor="#878281"
                android:layout_weight="1"/>
            <!--<ImageView
                android:id="@+id/imageView3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/fare3"  />-->

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/kurt"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/kurt"
                app:siBorderColor="#878281"
                app:siBorderWidth="6dp" />

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/fil"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/fil"
                app:siBorderColor="#878281"
                app:siBorderWidth="6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="20dp"
            android:layout_weight="1"
            >

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/kedi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/kedi2"
                app:siBorderColor="#878281"
                app:siBorderWidth="6dp" />

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/goril"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/goril"
                app:siBorderColor="#878281"
                app:siBorderWidth="6dp" />

            <com.github.siyamed.shapeimageview.CircularImageView

                android:id="@+id/kopek"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/kopek2"
                app:siBorderColor="#878281"
                app:siBorderWidth="6dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>